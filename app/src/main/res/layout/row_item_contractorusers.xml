<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mIvImage"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_user_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/mIvImage"
            app:layout_constraintTop_toTopOf="@+id/mIvImage"
            app:srcCompat="@drawable/ic_greyrectangle"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/mIvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/normal_poppins"
            android:gravity="center"
            android:padding="@dimen/margin_1x"
            android:text="Jack Jackson"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_very_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mIvImage" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>